---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description: string;
  lastUpdated?: string;
}

const { title, description, lastUpdated } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <Header slot="header" variant="company" showCTA={false} />

  <div class="bg-neutral-50 py-16">
    <article class="container-narrow px-4">
      <header class="mb-12 text-center">
        <h1 class="text-h1 text-neutral-900 mb-4">{title}</h1>
        {lastUpdated && (
          <p class="text-small text-neutral-400">
            Last updated: {lastUpdated}
          </p>
        )}
      </header>

      <div class="prose prose-neutral max-w-none bg-white rounded-xl p-8 md:p-12 shadow-card">
        <slot />
      </div>
    </article>
  </div>

  <Footer slot="footer" variant="company" />
</BaseLayout>

<style>
  .prose {
    @apply text-neutral-700 leading-relaxed;
  }

  .prose h2 {
    @apply text-h3 text-neutral-900 mt-10 mb-4 first:mt-0;
  }

  .prose h3 {
    @apply text-h4 text-neutral-900 mt-8 mb-3;
  }

  .prose p {
    @apply mb-4;
  }

  .prose ul, .prose ol {
    @apply mb-4 pl-6;
  }

  .prose ul {
    @apply list-disc;
  }

  .prose ol {
    @apply list-decimal;
  }

  .prose li {
    @apply mb-2;
  }

  .prose a {
    @apply text-primary hover:text-primary-dark underline;
  }

  .prose strong {
    @apply font-semibold text-neutral-900;
  }

  .prose blockquote {
    @apply border-l-4 border-primary pl-4 italic text-neutral-600 my-6;
  }
</style>
