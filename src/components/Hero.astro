---
import Logo from './Logo.astro';
import TrustBadge from './TrustBadge.astro';

export interface Props {
  variant?: 'company' | 'product';
  title: string;
  subtitle: string;
  ctaText: string;
  ctaLink: string;
  trustBadgeIcon?: string;
  trustBadgeText?: string;
  secondaryCta?: {
    text: string;
    link: string;
  };
}

const {
  variant = 'company',
  title,
  subtitle,
  ctaText,
  ctaLink,
  trustBadgeIcon = 'ðŸ‡¸ðŸ‡ª',
  trustBadgeText = 'Engineered in Stockholm',
  secondaryCta,
} = Astro.props;
---

<section class="hero min-h-[80vh] bg-gradient-hero flex items-center">
  <div class="container-wide px-4 py-20 text-center">
    {variant === 'company' ? (
      <div class="mb-6">
        <Logo variant="icon" size="lg" animated={true} class="mx-auto" />
      </div>
    ) : (
      <div class="flex justify-center mb-6">
        <div class="w-20 h-20 rounded-2xl bg-gradient-to-br from-emerald-500 to-teal-600 flex items-center justify-center shadow-lg">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-10 h-10 text-white" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round">
            <circle cx="12" cy="12" r="8" />
            <circle cx="12" cy="12" r="4" />
            <line x1="2" y1="12" x2="6" y2="12" />
            <line x1="18" y1="12" x2="22" y2="12" />
            <line x1="12" y1="2" x2="12" y2="6" />
            <line x1="12" y1="18" x2="12" y2="22" />
            <circle cx="12" cy="12" r="1" fill="currentColor" />
          </svg>
        </div>
      </div>
    )}

    <h1 class="text-display text-gradient mb-4 max-w-3xl mx-auto">{title}</h1>

    <p class="text-h3 text-neutral-600 mb-8 max-w-2xl mx-auto">
      {subtitle}
    </p>

    {trustBadgeText && (
      <TrustBadge icon={trustBadgeIcon} text={trustBadgeText} variant="light" />
    )}

    <div class="mt-12 flex flex-col sm:flex-row items-center justify-center gap-4">
      <a href={ctaLink} class="btn btn-primary text-lg px-8 py-4">
        {ctaText}
      </a>

      {secondaryCta && (
        <a href={secondaryCta.link} class="btn btn-ghost text-lg px-8 py-4">
          {secondaryCta.text}
        </a>
      )}
    </div>

    <!-- Optional slot for additional content like product screenshot -->
    <slot />
  </div>
</section>

<style>
  .hero {
    min-height: max(80vh, 600px);
  }
</style>
