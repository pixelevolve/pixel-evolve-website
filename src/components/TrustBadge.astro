---
export interface Props {
  icon: string;
  text: string;
  variant?: 'light' | 'dark';
  class?: string;
}

const {
  icon,
  text,
  variant = 'light',
  class: className = ''
} = Astro.props;

const variantStyles = {
  light: 'bg-neutral-50 border-neutral-200 text-neutral-700',
  dark: 'bg-white/10 border-white/20 text-white',
};
---

<div
  class:list={[
    'inline-flex items-center gap-2 px-4 py-2 rounded-full border text-small font-medium',
    variantStyles[variant],
    className,
  ]}
>
  <span class="flex-shrink-0">{icon}</span>
  <span>{text}</span>
</div>
