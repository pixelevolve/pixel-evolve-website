---
export interface Props {
  title?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  title = 'How it works',
  ctaText = 'Get Started →',
  ctaLink = '#',
} = Astro.props;

const steps = [
  {
    number: 1,
    title: 'Install',
    description: 'Install the app from Shopify App Store',
  },
  {
    number: 2,
    title: 'Configure',
    description: 'Select your target languages and brand terms',
  },
  {
    number: 3,
    title: 'Translate',
    description: "Click translate and you're done!",
  },
];
---

<section class="section bg-neutral-50">
  <div class="container-wide px-4 text-center">
    <h2 class="text-h2 mb-16">{title}</h2>

    <!-- Steps Container -->
    <div class="flex flex-col lg:flex-row items-center justify-center gap-8 lg:gap-4 mb-12">
      {steps.map((step, index) => (
        <>
          <!-- Step -->
          <div class="flex flex-col items-center max-w-xs">
            <!-- Number Circle with Gradient -->
            <div class="step-number w-16 h-16 rounded-full flex items-center justify-center text-white text-2xl font-bold mb-4">
              {step.number}
            </div>
            <h3 class="text-h4 text-neutral-900 mb-2">{step.title}</h3>
            <p class="text-body text-neutral-600">{step.description}</p>
          </div>

          <!-- Arrow (not after last step) -->
          {index < steps.length - 1 && (
            <div class="hidden lg:flex items-center text-neutral-300 text-3xl px-4">
              →
            </div>
          )}
        </>
      ))}
    </div>

    <!-- CTA -->
    <a href={ctaLink} class="btn btn-evolve">
      {ctaText}
    </a>
  </div>
</section>

<style>
  .step-number {
    background: linear-gradient(135deg, #3b82f6 0%, #10b981 100%);
  }
</style>
